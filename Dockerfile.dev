# Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Install dependencies
RUN pnpm install

# Expose port
EXPOSE 3000

# Start the application in development mode
CMD ["pnpm", "dev"]
